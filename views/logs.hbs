<a href="/" class="goback-link">(back)</a>

<div class="summary summary__primary center">
	{{formatNumber elevations "0,0.0"}} m
	<div class="summary--helper-text">Elevation Gain</div>
</div>

<div class="summary__secondary-container center">
	<div class="summary summary__secondary">
		{{formatNumber distance "0,0.0"}} km
		<div class="summary--helper-text">Distance</div>
	</div>

	<div class="summary summary__secondary">
		{{numRides}}
		<div class="summary--helper-text">Rides</div>
	</div>
</div>

<ol class="logs">
	{{#each rides}}
	<li class="logs--item">
		<div class="logs--elevation">
			{{formatNumber total_elevation_gain "0,0.0"}}
			<span class="logs--elevation-unit">m</span>
		</div>
		<div>
			<div class="logs-date">
				<a href="https://www.strava.com/activities/{{ activity_id }}" target="_blank">
					{{formatDate start_date}}
				</a>
			</div>
			<div>
				{{name}}
			</div>
		</div>
	</li>
	{{/each}}
</ol>

{{> footer}}
